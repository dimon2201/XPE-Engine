#include ../../types.shader
#include msaa_sampling.shader

struct VSOut
{
    float4 positionClip : SV_POSITION;
    float2 texcoord : XPE_UV;
};

struct PSOut
{
    float4 color : SV_Target0;
};

Texture2DMS<float4> AccumTexture : register(t0);
Texture2DMS<float> RevealTexture : register(t1);

PSOut ps_main(VSOut psIn)
{
    uint width = 0;
    uint height = 0;
    uint sampleCount = 0;
    AccumTexture.GetDimensions(width, height, sampleCount);

    float4 accum = SampleMSAATextureFloat4(AccumTexture, psIn.texcoord);
    float reveal = SampleMSAATextureFloat(RevealTexture, psIn.texcoord);
    
    PSOut psOut;
    psOut.color = float4(accum.rgb / max(accum.a, K_EPSILON), 1.0 - reveal);

    return psOut;
}