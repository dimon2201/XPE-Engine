struct VSOut
{
    float4 positionClip : SV_POSITION;
    float2 uv : XPE_UV;
};

struct PSOut
{
    float4 color : SV_Target0;
};

Texture2D<float4> Texture : register(t0);

PSOut ps_main(VSOut psIn)
{
    PSOut psOut;

    uint textureWidth = 0;
    uint textureHeight = 0;

    Texture.GetDimensions(textureWidth, textureHeight);
    float3 uvWorld = float3(float(textureWidth) * psIn.uv.x, float(textureHeight) * psIn.uv.y, 0);

    psOut.color = Texture.Load(int3(uvWorld));

    return psOut;
}