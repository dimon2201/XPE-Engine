struct VSOut
{
    float4 positionClip : SV_POSITION;
    float2 uv : XPE_UV;
};

struct PSOut
{
    float4 color : SV_Target0;
};

Texture2D<float4> ColorTexture : register(t0);

PSOut ps_main(VSOut psIn)
{
    PSOut psOut;

    uint width = 0;
    uint height = 0;

    ColorTexture.GetDimensions(width, height);
    float3 uv = float3(float(width) * psIn.uv.x, float(height) * psIn.uv.y, 0);

    float4 color = ColorTexture.Load(int3(uv));

    psOut.color = color;

    return psOut;
}