#include ../types.shader

struct VSOut
{
    float4 positionLight : SV_POSITION;
};

struct PSOut
{
    float depth : SV_Target0;
};

PSOut ps_main(VSOut psIn) {
    PSOut psOut;

    float depth = psIn.positionLight.z / psIn.positionLight.w;
    depth = depth * 0.5 + 0.5;
    psOut.depth = depth;

    return psOut;
}