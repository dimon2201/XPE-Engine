struct VSOut
{
    float4 positionLight : SV_POSITION;
};

struct PSOut
{
    float4 color : SV_Target0;
};

PSOut ps_main(VSOut psIn) {
    PSOut psOut;

    float depth = psIn.positionLight.z / psIn.positionLight.w;
    depth = depth * 0.5 + 0.5;
    psOut.color = float4(depth, depth, depth, 1.0);

    return psOut;
}