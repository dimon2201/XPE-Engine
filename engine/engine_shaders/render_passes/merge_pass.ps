struct VSOut
{
    float4 positionClip : SV_POSITION;
    float2 texcoord : XPE_UV;
};

struct PSOut
{
    float4 color : SV_Target0;
};

Texture2D<float4> ColorTexture : register(t0);
Texture2D<float4> AOTexture : register(t1);

PSOut ps_main(VSOut psIn)
{
    uint colorWidth = 0;
    uint colorHeight = 0;
    ColorTexture.GetDimensions(colorWidth, colorHeight);

    uint aoWidth = 0;
    uint aoHeight = 0;
    AOTexture.GetDimensions(aoWidth, aoHeight);

    float4 color = ColorTexture.Load(int3(psIn.texcoord * float2(colorWidth, colorHeight), 0));
    float4 ao = AOTexture.Load(int3(psIn.texcoord * float2(aoWidth, aoHeight), 0));

    PSOut psOut;
    psOut.color = ao;

    return psOut;
}